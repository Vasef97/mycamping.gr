<% layout('layouts/boilerplate')%>

<div class="shadow-sm">
    <div id="cluster-map"></div>
    <%# fancy cluster map! %>
</div>
    <div class="mt-4 mb-4">
        <h1>All Campgrounds</h1>
    </div>
    
        <% for (let campground of campgrounds){%>
            <div class="card mb-3 shadow-sm lines" id="">
                <div class="row">
                    <div class="col-md-4">
                        <% if(campground.images.length){%>
                            <%# an yparxei estw kai mia photo gia kathe camping tote: %>
                                <img class="img-fluid rounded-3 index-imgs" alt="" src="<%=campground.images[0].url%>">
                                <% }else { %>
                                    <img class="img-fluid" alt="" src="">
                                    <%# alliws den deixnoume tpt sto index.ejs %>
                                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=campground.title%>
                            </h5>
                            <p class="card-text">
                                <%=campground.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=campground.location%>
                                </small>
                            </p>
                            <a class="btn" href="/campgrounds/<%=campground._id %>" id="index-btn"> View
                                <%=campground.title %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>


                <script>
                    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';  //apoktame psrosvash tou Token sto clusterMap.js
                    const campgrounds = {features:<%-JSON.stringify(campgrounds) %>}  //apoktame psrosvash twn campgrounds sto clusterMap.js, epeidh to format tou data ->
                    //opou theloume na valoume sto map.on() einai typou {features:{campground}} orizoume o object campground = {features:{}}
                </script>    

                <script src="/javascripts/clusterMap.js"></script>
                